generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  rol      String

  // Relaciones
  tasks     Task[]
  comments  Comment[]
}

model Task {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  status   Boolean
  dueDate  DateTime

  // Relaci贸n a User
  userId   String   @db.ObjectId
  user     User     @relation(fields: [userId], references: [id])

  // Relaci贸n a Comment
  comments Comment[]
}

model Comment {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  comment  String

  // Relaci贸n a Task
  taskId   String   @db.ObjectId
  task     Task     @relation(fields: [taskId], references: [id])

  // Relaci贸n a User
  userId   String   @db.ObjectId
  user     User     @relation(fields: [userId], references: [id])
}

